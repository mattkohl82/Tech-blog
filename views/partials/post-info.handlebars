<article class="post bg-secondary">
  <div class="title bg-secondary ">
    <h3 class="card-title bg-secondary">{{title}}</h3>
    <p class="card-text bg-secondary">{{post_url}}</p>
  </div>
  <div class="meta">
    {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on
    {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
  </article>